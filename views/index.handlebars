<div class="container">
    <div class="row jumbotron pb-3">
        <div class="col text-center">
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <img class='img-fluid' src='./images/burger.png'>
                </div>
                <div class="col-4"></div>
            </div>
            <h1>Burger Simulator</h1>
        </div>
    </div>
    <div class="row bg-light rounded py-3">
        <div class="col">
            <h4>Burgers:</h4>

            <ul class='list-unstyled'>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col">
            <h4>Add a burger!</h4>
            <form class='newBurger form-inline'>
                <label for='name'>Name:</label>
                <input id='name' name='name' type='text' class='form-control mx-3'>
                <button class='btn btn-primary'>Submit</button>
            </form>

        </div>
        <div class="col">
            <h4>Devoured Burgers:</h4>

            <ul class='list-unstyled'>
                {{#each burgers}}
                {{#if devoured}}
                {{> devoured-block devour=true}}
                {{/if}}
                {{/each}}
            </ul>

        </div>



    </div>

</div>